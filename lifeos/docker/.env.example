# LifeOS Self-Hosted Configuration
# Copy this file to .env and update the values

# Application
APP_PORT=8080
NODE_ENV=production

# Database Type: postgresql or mysql
DB_TYPE=postgresql

# Database Connection
# For Docker internal PostgreSQL: DB_HOST=postgres, DB_PORT=5432
# For Docker internal MySQL: DB_HOST=mysql, DB_PORT=3306
# For external/XAMPP: use your server's address
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lifeos
DB_USER=lifeos
DB_PASSWORD=your_secure_password_here

# MySQL root password (only needed with MySQL profile)
DB_ROOT_PASSWORD=root_password

# JWT Secret (CHANGE THIS!)
JWT_SECRET=change-this-to-a-random-secret-string

# Supabase (optional - leave empty for self-hosted mode)
# If set, the app will use Supabase Cloud instead of local database
VITE_SUPABASE_URL=
VITE_SUPABASE_PUBLISHABLE_KEY=

# Self-hosted API URL (set automatically in Docker)
VITE_SELFHOSTED_API_URL=/api

# pgAdmin (optional, for database management)
PGADMIN_EMAIL=admin@lifeos.local
PGADMIN_PASSWORD=your_pgadmin_password

# Redis (optional)
REDIS_PASSWORD=
